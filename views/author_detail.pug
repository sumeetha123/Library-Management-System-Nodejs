extends layout

block content
  div(class="details")
    h1 Author Details

  p(class= "tag") #[em Welcome to #[em LocalLibrary], we can view details of authors. And anyone can access them normally.]

  
  div(class="para conts")
    h1 Author: #{author.name}
    //- p #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}
    p #{author.lifespan}

    div(style='margin-left:20px,margin-top:20px')

      h4 Books

      d1
        each book in author_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}

        else
          p This author has no books.

      hr
      p
        a(href=author.url+'/delete') Delete author

      p
        a(href=author.url+'/update') Update author